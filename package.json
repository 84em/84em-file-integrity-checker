{
  "name": "84em-file-integrity-checker",
  "version": "2.0.0",
  "description": "File Integrity Checker plugin for WordPress",
  "private": true,
  "scripts": {
    "build": "npm run minify",
    "minify": "npm run minify:css && npm run minify:js",
    "minify:css": "clean-css-cli -o assets/css/admin.min.css assets/css/admin.css --source-map",
    "minify:js": "npm run minify:admin-js && npm run minify:modal-js",
    "minify:admin-js": "terser assets/js/admin.js -o assets/js/admin.min.js -c -m --source-map",
    "minify:modal-js": "terser assets/js/modal.js -o assets/js/modal.min.js -c -m --source-map",
    "watch": "npm-watch"
  },
  "watch": {
    "minify:css": {
      "patterns": [
        "assets/css"
      ],
      "extensions": "css",
      "ignore": "*.min.css"
    },
    "minify:js": {
      "patterns": [
        "assets/js"
      ],
      "extensions": "js",
      "ignore": "*.min.js"
    }
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "npm-watch": "^0.11.0",
    "terser": "^5.44.0"
  }
}
